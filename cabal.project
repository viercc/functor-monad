packages:
    ./functor-monad/*.cabal
    ./functor-monad-test/*.cabal
    ./free-applicative-t/*.cabal
    ./day-comonoid/*.cabal

program-options
    ghc-options: -Werror
    haddock-options: --no-print-missing-docs

package *
    haddock-hyperlink-source: True
    documentation: True
    haddock-html-location: http://hackage.haskell.org/packages/archive/$pkg/$version/doc/html